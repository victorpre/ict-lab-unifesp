<div id="breadcrumb" class="col-xs-12">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li><a href="usuarios.html">Equipamentos</a></li>
    <li style="color:#d8d8d8">Cadastrar</li>
  </ol>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
      <div>
          <%= form_for @equip do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <label class="col-sm-3 control-label">Nome:</label>
              <div class="col-sm-9">
                <%= f.text_field :name, autofocus: true, :class=>"form-control" %></div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Modelo:</label>
              <div class="col-sm-9">
                <%= f.text_field :model, autofocus: true, :class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Patrim√¥nio:</label>
              <div class="col-sm-9">
                 <%= f.text_field :patrimony_id, autofocus: true, :class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Valor Hora:</label>
              <div class="col-sm-9">
                <%= f.text_field :cost, autofocus: true, :class=>"form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div style="text-align:center">
                  <%= f.submit "Salvar", :class=>"btn btn-primary btn-lg" %>
              </div>
            </div>
          <% end %>
      </div>
  </div>
</div>
