<%= javascript_include_tag "schedules" %>

<script>
	userName = "<%= current_user.name %>";
	userId = "<%= current_user.id %>";
</script>

<div id="breadcrumb" class="col-xs-12">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Agendamento', users_path %></li>
  </ol>
</div>

<div class="row" ng-controller="SchedulesCtrl">
  <div class="col-sm-12">
  	<div class="row">
  	  <div class="col-sm-1 col-sm-offset-3">
  		<span>Equipamento:</span>
  	  </div>
  	  <div class="col-sm-4">
  		<select class="form-control" ng-model="equipamentId" ng-options="equip.id as equip.name +' - Patrimônio: '+ equip.patrimony_id for equip in equips" ng-change="listSchedulesByEquipament()">
  			<option value="">-- Selecione --</option>
	  	</select>
  	  </div>
  	  <div class="col-sm-3">
  	  	<button class="btn btn-primary" ng-click="newSchedule()"><i class="fa fa-plus"></i> Adicionar Agendamento</button> 
  	  </div>
  	</div>

	<div id="calendar" ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources"></div> 
  </div>

  <div id="modalAgendamento" tabindex="-1" class="modal fade">
	<div  class="modal-dialog">
	    <div class="modal-content  modal-login">
	    	<input type="hidden" ng-model="schedule.scheduleId" />
	        <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	            <h4 class="modal-title center">Novo agendamento</h4>
	        </div>
	         <div class="modal-body">
	         	<form id="form_schedule" name="form_schedule" novalidate ng-submit="cadastrar()">
			        <div class="row form-group">
				      <div class="col-sm-1 col-sm-offset-3">
				      	<label>Data:</label>
				      </div> 
				      <div class="col-sm-4">
				        <input type="date" class="form-control" ng-model="schedule.startDate" name="startDate" required />
			          </div>
		      		</div>	
		      		<div class="row form-group">
				      <div class="col-sm-3" style="text-align:right">
				      	<label>Hora início:</label>
				      </div> 
				      <div class="col-sm-3">
				        <input type="time" class="form-control" ng-model="schedule.startTime" name="startTime" required />
			          </div>
				      <div class="col-sm-3" style="text-align:right">
				      	<label>Hora Término:</label>
				      </div> 
				      <div class="col-sm-3">
				        <input type="time" class="form-control" ng-model="schedule.endTime" name="endTime" required />
			          </div>
		      		</div>
		      	</form>
	      	</div>
	        <div class="modal-footer">
	        	<div class="row">
	        		<div  style="text-align:left;" class="col-sm-6">
		                <button type="button" class="btn btn-primary" ng-click="removeEvent(schedule.scheduleId)" ng-show="botaoRemoverEvento"><i style="color:white" class="fa fa-trash-o"></i> Excluir</button>
		            </div>
		            <div  style="text-align:right;" class="col-sm-6">
		                <button type="button" class="btn btn-primary" ng-click="addEvent()" ng-disabled="form_schedule.$invalid"><i class="fa fa-save"></i> Salvar</button>
		            </div>
	        	</div>
		            
	        </div>
	    </div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


</div>



