<%= javascript_include_tag "users" %>
<div>
  <div id="breadcrumb" class="col-xs-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Editar Perfil', edit_user_registration_path %></li>
    </ol>
  </div>
<div class="col-sm-6 col-sm-offset-3">

<%= form_for(resource, as: resource_name, url: update_user_registration_path(@user.id), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

   <div class="form-group row">
            <%= f.label :name, "Nome:", :class=>"col-sm-2" %>
            <div class="col-sm-10">
              <%= f.text_field :name, autofocus: true, :class=>"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :name, "E-mail:", :class=>"col-sm-2" %>
            <div class="col-sm-10">
              <%= f.text_field :email, autofocus: true, :class=>"form-control" %>
            </div>
          </div>

      <div class="form-group row">
        <%= f.label :ra, "RA:", :class=>"col-sm-2" %>
        <div class="col-sm-10">
          <%= f.text_field :ra, autofocus: true, :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, "Senha:", :class=>"col-sm-2" %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, "Confirma senha:", :class=>"col-sm-2" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
        </div>
      </div>
    
      <div class="centralizar">
        <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
            <i class="fa fa-save"></i> Salvar
        <% end %>
      </div>
<% end %>
</div>

<script type="text/javascript">

    if($('#user_internal').val("true")){
      $("#user_institution").val("UNIFESP-SJC");
      $("#user_institution").attr("disabled", true);
    }
    
    //$("#user_institution").attr("style", "display:none");

    $('#user_internal').on('change', function() {
      if(this.value == "true"){
        $("#user_institution").val("UNIFESP-SJC");
        $("#user_institution").attr("disabled", true);
      }else{
        $("#user_institution").val("");
        $("#user_institution").attr("disabled", false);
      }
    });

    //Professor
    $('#user_type_1').on('change', function() {
      if(this.value == "1"){
        $("#user_ra").val("");
        $("#user_ra").attr("disabled", true);
      }
    });

    //Aluno
    $('#user_type_2').on('change', function() {
      if(this.value == "2"){
        $("#user_ra").val("");
        $("#user_ra").attr("disabled", false);
      }
    });
  </script>

