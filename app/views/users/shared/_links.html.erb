<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:user) %><br />
<% end -%>

<%- if Devise.mappings[:user].omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(:user, provider) %><br />
  <% end -%>
<% end -%>
